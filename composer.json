{
  "name": "zionbuilder/zionbuilder",
  "type": "wordpress-plugin",
  "description": "A visual builder for WordPress",
  "license": "GPL-3.0-or-later",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "zionbuilder",
      "email": "hello@zionbuilder.com"
    }
  ],
  "require": {
    "woocommerce/action-scheduler": "^v3.1.5"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7.2",
    "ergebnis/composer-normalize": "^2.9.1",
    "phpstan/phpstan": "^1.5.4",
    "squizlabs/php_codesniffer": "^3.5.8",
    "szepeviktor/phpstan-wordpress": "v1.0.5",
    "wp-coding-standards/wpcs": "dev-develop as 3.0.0",
    "wp-cli/wp-cli-bundle": "*"
  },
  "autoload": {
    "psr-4": {
      "ZionBuilder\\": "includes/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "makepot-audit": [
      "wp --allow-root i18n make-pot ./dist languages/zionbuilder.pot --exclude=\".github,vendor,node-modules,includes,.wordpress-org,bin,sample-data,node_modules,tests\" --slug=zionbuilder"
    ],
    "makepot": [
      "@makepot-audit --skip-audit"
    ]
  }
}
