{
  "name": "zionbuilder",
  "author": {
    "name": "zionbuilder.io",
    "email": "hello@zionbuilder.io",
    "url": "https://zionbuilder.io"
  },
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "lint": "vue-cli-service lint --no-fix src/",
